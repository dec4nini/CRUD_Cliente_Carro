@model ClienteProduto.Models.Carro

@{
    Layout = "_LayoutIES";
}

@section styles{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div class="card-body">
    <div class="card-header text-primary bg-light text-center h1">
        Exibição do Carro
    </div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="CarroId" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="CarroId" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Marca" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Marca" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Modelo" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Modelo" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Cor" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Cor" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumRodas" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="NumRodas" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NumChassi" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="NumChassi" class="form-control" disabled="disabled">
            </div>
        </div>
    </div>
    <div class="form-group text-center h3">
        <a asp-action="Edit" asp-route-id="@Model.CarroId">Editar</a> |
        <a asp-action="Index" class="btn btn-light">Retornar</a>
    </div>

</div>
