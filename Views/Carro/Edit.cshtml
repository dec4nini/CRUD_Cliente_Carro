@model ClienteProduto.Models.Carro

@{
    Layout = "_LayoutIES";
}



<div class="card-body">
    <div class="card-header text-primary bg-light text-center h1">
        Alterar Carro
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="CarroId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label>
                <input asp-for="Cor" class="form-control" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumRodas" class="control-label"></label>
                <input asp-for="NumRodas" class="form-control" />
                <span asp-validation-for="NumRodas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumChassi" class="control-label"></label>
                <input asp-for="NumChassi" class="form-control" />
                <span asp-validation-for="NumChassi" class="text-danger"></span>
            </div>
            <div class="form-group text-center h3">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Retornar</a>
            </div>
        </form>
    </div>

</div>


@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
