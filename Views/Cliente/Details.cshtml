@model ClienteProduto.Models.Cliente

@{
    Layout = "_LayoutIES";
}

@section styles{
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div class="card-body">
    <div class="card-header text-primary bg-light text-center h1">
        Exibição do Musico
    </div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="ClienteId" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="ClienteId" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Nome" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Idade" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Idade" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sexo" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Sexo" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Email" class="form-control" disabled="disabled">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Telefone" class="control-label"></label>
            <br />
            <div class="input-group">
                <input asp-for="Telefone" class="form-control" disabled="disabled">
            </div>
        </div>
    </div>
    <div class="form-group text-center h3">
        <a asp-action="Edit" asp-route-id="@Model.ClienteId">Editar</a> |
        <a asp-action="Index" class="btn btn-light">Retornar</a>
    </div>

</div>
